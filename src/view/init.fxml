<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.InitController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="nickNameField" promptText="inserire nick-name">
               <font>
                  <Font size="19.0" />
               </font>
            </TextField>
            <TextField fx:id="contractIdField" promptText="inserire il codice numerico del contratto">
               <font>
                  <Font size="19.0" />
               </font>
            </TextField>
            <HBox>
               <children>
                  <Button fx:id="checkForSubmitsBtn" mnemonicParsing="false" onAction="#checkForSubmits" text="valuta proposte">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
                  <Button fx:id="doRequestsBtn" mnemonicParsing="false" onAction="#doRequests" text="Fai Richieste">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="errorMsgArea" prefHeight="200.0" prefWidth="441.0" />
         </children>
      </VBox>
   </center>
   <top>
      <Label text="Gestione Contratti" BorderPane.alignment="CENTER">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
   </top>
</BorderPane>
